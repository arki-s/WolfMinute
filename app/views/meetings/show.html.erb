<%= link_to "Calendar", meetings_path %>
<div class="container" data-controller="meeting">
  <p>Title: <%= @meeting.title.capitalize %></p>
  <p>Time: <%= @meeting.start_date.strftime("%A, %d %b %Y %l:%M %p")  %></p>
  <p>Duration: <%= @meeting.duration  %> minutes</p>
  <p>Location: <%= @meeting.location.capitalize  %></p>
  <p>Organizer: <%= @meeting.user.name  %></p>
  <p>Description: <%= @meeting.description %></p>
  <h2>Attendance</h2>
  <% @attendance.each do |person|%>
    <ul>
      <li data-action="click->meeting#toggleDiv">
        <%= person.name%>
      </li>
      <div class="worker" data-meeting-target="user">
        <%= image_tag person.photo.key ? cl_image_path(person.photo.key) :  "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar"%>
        <p>Mobile: <%= person.mobile%></p>
        <p>Email: <%= person.email %></p>
        <p>Position: <%= person.job_title %></p>
      </div>
    </ul>
  <% end %>
</div>
<p><%= link_to "Edit", edit_meeting_path %></p>
