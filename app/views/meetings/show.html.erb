<%= link_to "Calendar", meetings_path %>
  <div class="container" data-controller="meeting">
    <div class="meeting-card">

    <p><%= noun_project_icon("icon", class: "my-custom-class") %> <%= @meeting.title.capitalize %></p>
    <p> <i class="fa-solid fa-comment"></i> <%= @meeting.description %></p>
    <p> <i class="fa-solid fa-clock"></i> <%= @meeting.start_date.strftime("%A, %d %b %Y %l:%M %p")  %></p>
    <p><%= noun_project_icon("iconattendee", class: "my-custom-class") %></p>
    <% @meeting.users.each do |user| %>
    <%=  user.photo.attached? ? cl_image_tag(user.photo.key, class: "avatar", data: {"bs-toggle": "modal" ,"bs-target": "#user_#{user.id}"}) : image_tag(
 "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar")%>
    <%= render "users/modal", user: user%>
    <% end %>
    <p><i class="fa-solid fa-clock-rotate-left"></i> <%= @meeting.duration  %> minutes</p>
    <p><i class="fa-solid fa-sitemap"></i> <%= @meeting.user.name  %></p>
    <p><i class="fa-solid fa-house-circle-exclamation"></i> <%= @meeting.location.capitalize  %></p>
   </div>


</div>
<p><%= link_to "Edit", edit_meeting_path %></p>
